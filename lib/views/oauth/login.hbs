<!DOCTYPE html>
<html>
    {{> head}}

    <body class="hold-transition login-page">
        <div class="login-box">
            <div class="login-logo"><a href="/"><b>OpenMessage Admin</b></a></div>

            <div class="login-box-body">
                {{#if error}}
                    <p class="bg-danger text-danger">
                        <span>{{error}}</span>
                    </p>
                {{/if}}
                <p class="login-box-msg">Sign in to start your session</p>
                <form role="form" action="/login" method="post" class="form-signin text-center">
                    <input name="username" type="email" placeholder="Email Address" required autofocus class="form-control">
                    <input name="password" type="password" placeholder="Password" required class="form-control">
                    <p></p>
                    <button type="submit" class="btn btn-default btn-block btn-social btn-flat">
                        <img src="/images/favicon.png" />
                        Sign in with OpenMessage
                    </button>
                    <p></p>
                    <p>OR</p>
                    <div class="social-auth-links text-center">
                        <a href="/oauth/google" class="btn btn-block btn-social btn-google btn-flat">
                            <i class="fa fa-google-plus"></i>
                            Sign in with Google
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </body>

    {{> scripts}}
</html>
